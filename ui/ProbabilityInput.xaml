<UserControl x:Class="Симулятор_генетики_4.ui.ProbabilityInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Симулятор_генетики_4.ui"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" x:Name="probability"> Вероятность: 50/50</TextBlock>
        <DockPanel Grid.Row="1">
            <TextBlock FontSize="18" x:Name="A">A</TextBlock>
            <TextBlock FontSize="18" x:Name="a" DockPanel.Dock="Right">a</TextBlock>
            <Slider x:Name="le_Choose" Minimum="50" Maximum="99" ValueChanged="Slider_ValueChanged"></Slider>
        </DockPanel>
    </Grid>
</UserControl>
